{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ Project (Simple)",
            "type": "shell",
            "command": "g++.exe", // O 'g++' si estás en Linux/macOS
            "args": [
                "-g",
                "${fileDirname}/*.cpp", // Compila todos los .cpp en la carpeta actual
                "-o",
                // ¡CAMBIO CLAVE AQUÍ!
                // Crea el ejecutable directamente en la misma carpeta que los archivos fuente,
                // usando el nombre 'outDebug.exe'.
                "${fileDirname}/outDebug.exe" 
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compila a outDebug.exe en el mismo directorio fuente."
        }
    ]
}